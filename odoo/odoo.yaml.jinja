version: "2.4"

services:
  odoo:
    image: {{ image_url }}
    restart: unless-stopped
    {% if open_odoo_ports -%}
    ports:
      - "{{ odoo_port }}:{{ odoo_port }}"
      - "{{ odoo_port_longpolling }}:{{ odoo_port_longpolling }}"
    {%- endif %}
    env_file:
      - .docker/odoo.env
      - .docker/db-access.env
    environment:
      DB_FILTER: "{{ odoo_dbfilter }}"
      DOODBA_ENVIRONMENT: "${DOODBA_ENVIRONMENT-prod}"
      INITIAL_LANG: "{{ odoo_initial_lang }}"
      LETSENCRYPT_HOST: {{ domain }}
      VIRTUAL_HOST: {{ domain }}
      VIRTUAL_PORT: {{ odoo_port }}
      VIRTUAL_PATH: /
    volumes:
      - filestore:/var/lib/odoo
    {% if tipo_servidor_postgres == 'install' -%}
    depends_on:
      - db
    {%- endif %}
    networks:
      - odoo

  odoo-chat:
    image: {{ image_url }}
    restart: unless-stopped
    env_file:
      - .docker/odoo.env
      - .docker/db-access.env
    environment:
      DB_FILTER: "{{ odoo_dbfilter }}"
      DOODBA_ENVIRONMENT: "${DOODBA_ENVIRONMENT-prod}"
      INITIAL_LANG: "{{ odoo_initial_lang }}"
      LETSENCRYPT_HOST: {{ domain }}
      VIRTUAL_HOST: {{ domain }}
      VIRTUAL_PORT: {{ odoo_port_websocket }}
      VIRTUAL_PATH: /websocket
      MAX_CRON_THREADS: 0
    volumes:
      - filestore:/var/lib/odoo
    {% if tipo_servidor_postgres == 'install' -%}
    depends_on:
      - db
    {%- endif %}
    networks:
      - odoo

networks:
  odoo:
    driver: bridge
    name: odoo
    driver_opts:
      encrypted: 1

volumes:
  filestore:
